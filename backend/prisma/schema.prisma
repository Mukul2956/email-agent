// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Email {
  id          String   @id @default(dbgenerated("uuid_generate_v4()")) @db.Uuid
  sender      String
  senderName  String?
  senderEmail String?
  senderAvatar String?
  receiver    String
  subject     String
  body        String   @db.Text
  category    String?
  actionItems Json     @default("[]") @map("action_items") @db.JsonB
  receivedAt  DateTime @map("received_at") @db.Timestamptz(6)
  processed   Boolean  @default(false)
  starred     Boolean  @default(false)
  read        Boolean  @default(false)
  createdAt   DateTime @default(now()) @map("created_at") @db.Timestamptz(6)
  updatedAt   DateTime @default(now()) @updatedAt @map("updated_at") @db.Timestamptz(6)

  // Relations
  drafts      Draft[]
  chatHistory ChatHistory[]

  @@index([category])
  @@index([processed])
  @@index([receivedAt(sort: Desc)])
  @@index([sender])
  @@map("emails")
}

model Prompt {
  id         String   @id @default(dbgenerated("uuid_generate_v4()")) @db.Uuid
  type       String   @unique
  title      String
  promptBody String   @map("prompt_body") @db.Text
  createdAt  DateTime @default(now()) @map("created_at") @db.Timestamptz(6)
  updatedAt  DateTime @default(now()) @updatedAt @map("updated_at") @db.Timestamptz(6)

  @@index([type])
  @@map("prompts")
}

model Draft {
  id        String   @id @default(dbgenerated("uuid_generate_v4()")) @db.Uuid
  emailId   String?  @map("email_id") @db.Uuid
  draftBody String   @map("draft_body") @db.Text
  subject   String?
  recipient String?
  createdAt DateTime @default(now()) @map("created_at") @db.Timestamptz(6)
  updatedAt DateTime @default(now()) @updatedAt @map("updated_at") @db.Timestamptz(6)

  // Relations
  email Email? @relation(fields: [emailId], references: [id], onDelete: Cascade)

  @@index([emailId])
  @@map("drafts")
}

model ChatHistory {
  id        String   @id @default(dbgenerated("uuid_generate_v4()")) @db.Uuid
  emailId   String?  @map("email_id") @db.Uuid
  role      String   // 'user' or 'assistant'
  message   String   @db.Text
  timestamp DateTime @default(now()) @db.Timestamptz(6)

  // Relations
  email Email? @relation(fields: [emailId], references: [id], onDelete: Cascade)

  @@index([emailId])
  @@index([timestamp(sort: Desc)])
  @@map("chat_history")
}